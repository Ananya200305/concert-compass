{
  "name": "Concert Compass",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Discover concerts for your favorite artists using Spotify",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon.png"
  },
  "icons" : {
    "128" : "icons/icon.png"
  },
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*",
    "https://concert-compass-backend.onrender.com/*",
    "https://app.ticketmaster.com/*"
  ]
}
